extends layout

block content
  div(class="max-w-md mx-auto my-10 bg-white p-5 rounded shadow-sm")
    h1(class="text-2xl font-semibold mb-5") Register
    form(action="/auth/register", method="post")
      div(class="mb-4")
        label(for="username" class="block text-gray-700 text-sm font-semibold mb-2") Username:
        input(type="text", name="username", required class="form-input w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500")
      div(class="mb-6")
        label(for="password" class="block text-gray-700 text-sm font-semibold mb-2") Password:
        input(type="password", name="password", required class="form-input w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500")
      button(type="submit" class="bg-blue-500 text-white text-sm font-semibold py-2 px-4 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500") Register
    p(class="mt-2 text-gray-600 text-xs") Already have an account? 
      a(href="/auth/login" class="text-blue-500 hover:underline") Login
