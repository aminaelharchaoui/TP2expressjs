extends layout

block content
  div(class="max-w-xl mx-auto my-10 bg-white p-5 rounded shadow-sm")
    h1(class="text-2xl font-semibold mb-5") Welcome to the Books Page
    ul(class="list-disc pl-4")
      each book in books
        li(class="text-gray-700 text-sm mb-2")= book
    a(href="/auth/logout" class="bg-blue-500 text-white text-sm font-semibold py-2 px-4 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 mt-4") Logout
